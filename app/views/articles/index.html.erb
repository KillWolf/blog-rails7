<div class="container-lg text-center">
	<div class="d-flex justify-content-center align-items-center gap-3 ">
		<h1>Listing all articles</h1>
		<%= button_to "New", new_article_path, method: :get, class: "btn btn-primary" %>
	</div>

	<% @articles.each do | article |%>
		<div class="row justify-content-center">
			<div class="col-8 mt-4">
				<div class="card text-center">
					<div class="card-header">
						by <%= article.user.username %>
					</div>
					<div class="card-body">
						<h5 class="card-title"><%= article.title %></h5>
						<p class="card-text"><%= truncate(article.description, length: 100) %></p>
						<div class="d-flex justify-content-center gap-3">
							<%= button_to "View", article, method: :get, class: "btn btn-primary" %>
							<%= button_to "Edit", edit_article_path(article), method: :get, class: "btn btn-primary" %>
							<%= button_to "Delete", article, method: :delete, class: "btn btn-primary" %>
						</div>
					</div>
					<div class="card-footer text-muted">
						Created <%= time_ago_in_words(article.created_at) %> agi, edited  <%= time_ago_in_words(article.updated_at) %> ago
					</div>
				</div>
			</div>
		</div>
	<% end %>

</div>
